@using ParkIRC.Models
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Error</h3>
                </div>
                <div class="card-body">
                    <h4>@(Model?.Message ?? "An error occurred while processing your request.")</h4>
                    
                    @if (Model?.ShowRequestId ?? false)
                    {
                        <p class="text-muted">
                            <small>Request ID: <code>@Model?.RequestId</code></small>
                        </p>
                    }
                    
                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Go Back
                        </a>
                        <a href="@Url.Action("Dashboard", "Parking")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Go to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

